{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/search/algolia.json",
  "description": "Enable Algolia search\nhttps://www.algolia.com",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "algolia"
    },
    "excerpt": {
      "type": "string",
      "description": "The field name to be used as the excerpt in the Algolia index. Defaults to 'excerpt'."
    }
  },
  "required": ["type"]
}
