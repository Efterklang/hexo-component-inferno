{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "/comment/waline.json",
  "description": "Waline comment plugin configurations",
  "type": "object",
  "properties": {
    "type": {
      "type": "string",
      "const": "waline"
    },
    "el": {
      "type": "string",
      "description": "The DOM element to be mounted on initialization. It must be a valid CSS selector string or HTMLElement Object.",
      "default": "#waline-thread",
      "nullable": true
    },
    "server_url": {
      "type": "string",
      "description": "Waline server address url.",
      "nullable": false
    },
    "placeholder": {
      "type": "string",
      "description": "Comment box placeholder",
      "nullable": true
    },
    "path": {
      "type": "string",
      "description": "Article path id. Used to distinguish different article pages to ensure loading the correct comment list under the article page.",
      "default": "window.location.pathname",
      "nullable": true
    },
    "lang": {
      "type": "string",
      "description": "Display language.",
      "enum": ["zh", "zh-CN", "zh-TW", "en", "en-US", "jp", "jp-JP"],
      "default": "zh-CN",
      "nullable": true
    },
    "visitor": {
      "type": "boolean",
      "description": "Show visitor count",
      "default": false,
      "nullable": true
    },
    "emoji": {
      "type": "array",
      "description": "Emoji settings",
      "items": {
        "type": "string"
      },
      "default": ["https://cdn.jsdelivr.net/gh/walinejs/emojis/weibo"],
      "nullable": true
    },
    "dark": {
      "type": "string",
      "description": "Darkmode support",
      "enum": ["", "auto"],
      "nullable": true
    },
    "meta": {
      "type": "array",
      "description": "Reviewer attributes",
      "items": {
        "type": "string"
      },
      "default": ["nick", "mail", "link"],
      "nullable": true
    },
    "required_meta": {
      "type": "array",
      "description": "Required commenter information fields",
      "default": [],
      "nullable": true
    },
    "login": {
      "type": "string",
      "description": "Root URL of your custom domain",
      "enum": ["enable", "disable", "force"],
      "default": "enable",
      "nullable": true
    },
    "avatar": {
      "type": "string",
      "description": "Gravatar type",
      "enum": ["", "mp", "identicon", "monsterid", "wavatar", "robohash", "retro", "hide", "mm"],
      "default": "mp",
      "nullable": true
    },
    "word_limit": {
      "type": "number",
      "description": "Comment word s limit. When a single number is filled in, it 's the maximum number of comment words. No limit when set to 0.",
      "default": 0,
      "nullable": true
    },
    "page_size": {
      "type": "number",
      "description": "number of comments per page.",
      "default": 10,
      "nullable": true
    },
    "avatar_cdn": {
      "type": "string",
      "description": "Gravatar CDN baseURL.",
      "default": "https://sdn.geekzu.org/avatar/",
      "nullable": true
    },
    "avatar_force": {
      "type": "boolean",
      "description": "Whether force pulling the latest avatar each time.",
      "default": false,
      "nullable": true
    },
    "highlight": {
      "type": "boolean",
      "description": "Code highlighting, it's enabled by default, please close it selectively.",
      "default": true,
      "nullable": true
    },
    "math_tag_support": {
      "type": "boolean",
      "description": "Whether inject extra styles to display <math> block",
      "default": false,
      "nullable": true
    },
    "copyright": {
      "type": "boolean",
      "description": "Whether show copyright and version in footer.",
      "default": true,
      "nullable": true
    }
  },
  "required": ["type", "server_url"]
}
